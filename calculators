/*Basic computing program*/

1.Adding two numbers.

#include<stdio.h>
void main()
{
   int a=10,b=5;
   printf("Addition of two numbers:%d",a+b);
}

==============================================================================================================================================================================================
Output:

Addition of two numbers:15

==============================================================================================================================================================================================


2.Adding two numbers(input give by user)

#include<stdio.h>
void main()
{
   int a,b;
   printf("Enter the number1 :");
   scanf("%d",&a);
   printf("Enter the number2 :");
   scanf("%d",&b);
   printf("Addition of two numbers:%d",a+b);
}

============================================================================================================================================================================================

Output

Enter the number1 :2
Enter the number2 :4
Addition of two numbers:6

=============================================================================================================================================================================================


3.Perimeter and Area of rectangle.

#include<stdio.h>
void main()
{
   float l,w;
   printf("Enter the lenght(l) of a rectangle: ");
   scanf("%f",&l);
   printf("Enter the width(w) of a rectangle: ");
   scanf("%f",&w);
   printf("\nPerimeter of rectangle : %f",2*(l+w));
   printf("\nArea of rectangle :%f",w*l);
}


=============================================================================================================================================================================================

Output

Enter the lenght(l) of a rectangle: 22.6
Enter the width(w) of a rectangle: 88

Perimeter of rectangle :221.199997
Area of rectangle :1988.800049

=============================================================================================================================================================================================


4.Circumference of the circle

#include<stdio.h>
void main()
{
    int r,C;
    float pi=3.14;
    printf("Enter the radius of circle :");
    scanf("%d",&r);
    C=pi*r;
    printf("\nCircumference of the circle is : %d",C);
}

==============================================================================================================================================================================================

Output

Enter the radius of circle :4

Circumference of the circle is : 12

========================================================================================================================================================================================


5.Volume of a cylinder

#include<stdio.h>
void main()
{
    float pi=3.14,r,h;
    printf("Enter radus:");
    scanf("%f",&r);
    printf("Enter hight:");
    scanf("%f",&h);
    printf("Volume of a cylinder is %.2f",pi*r*r*h);
    
}

==========================================================================================================================================================================================

Output

Enter radus:56
Enter hight:5
Volume of a cylinder is 49235.20

==========================================================================================================================================================================================


6.BMI (Body Mass Index) Calculator


#include<stdio.h>
#include<math.h>

void main() 
{
  float weight, height,BMI;
  printf("Enter your weight in kg : ");
  scanf("%f",&weight);
  printf("\nEnter your height in cm : ");
  scanf("%f",&height);
  BMI=weight/(height*height);
  printf("\nYour BMI is  : %.2f",BMI);
}

==========================================================================================================================================================================================

Output

Enter your weight in kg : 77

Enter your height in m : 1.5

Your BMI is  : 34.22

===========================================================================================================================================================================================




































