1.voting eligiblity


#include<stdio.h>
void main()
{
   int age;
   printf("Enter your age:");
   scanf("%d",&age);
   if(age>=18)
    {
        printf("\nEligible to vote");
    }
   else
    {
        printf("\nNot eligible for vote");
    }

}
=============================================================================================================================================

Output

Enter your age:21

Eligible to vote

===========================================================================================================================================

2.BMI category

#include<stdio.h>
#include<math.h>

void main() 
{float weight, height,BMI;

printf("Enter your weight in kg : ");
scanf("%f",&weight);
printf("\nEnter your height in m : ");
scanf("%f",&height);

BMI=weight/(height*height);

printf("\nYour BMI is  : %.2f",BMI);
if(BMI<18.5)
{
    printf("\nCategory : Under weight");
}
else if(BMI>18.5 && BMI<24.9)
{
    printf("\nCategory : Normal weight");
}
else if(BMI>25 && BMI<29.9)
{
    printf("\nCategory : Over weight ");
}
else if(BMI>=30)
{
    printf("\nCategory : Obesity");
}
}

===========================================================================================================================================

Output

Enter your weight in kg : 77

Enter your height in m : 1.6

Your BMI is  : 30.08
Category : Obesity

==========================================================================================================================================

3.Divisibility

#include<stdio.h>
void main()
{
   int x;
   printf("Enter the number :");
   scanf("%d",&x);
   if((x%5==0)&&(x%11==0))
   {
       printf("\nThe given number is divisibility by 5 and 11");
       
   }
   else
   {
       printf("\nThe given number is not divisibility by 5 and 11 ");
   }
}

=========================================================================================================================================

Output

Enter the number :110

The given number is divisibility by 5 and 11

==========================================================================================================================================

4.Arithmetic operation

#include<stdio.h>
void main()
{
  int a,b,num;
  printf("Enter number1:");
  scanf("%d",&a);
  printf("\nEnter number2:");
  scanf("%d",&b);
  printf("\nchoose any option\n1.addition\n2.subraction\n3.multiplication\n4.division\n");
  scanf("%d",&num);
  switch(num)
  {
    case 1:
        printf("The addition of two numbers \n%d",a+b);
        break;
    case 2:
        printf("Subrection of two numbers \n%d",a-b);
        break;
    case 3:
        printf("Multiplaction of two numbers \n%d",a*b);
        break;
    case 4:
        if(b==0)
        {
            printf("\ncannot divisible");
        }
        else
        {
        printf("division of two number \n%d",a/b);
        }
        break;
    
  }
    
  }


==========================================================================================================================================

Output 1

Enter number1:56

Enter number2:2

choose any option
1.addition
2.subraction
3.multiplication
4.division
4
division of two number 
28

Output 2

Enter number1:5

Enter number2:0

choose any option
1.addition
2.subraction
3.multiplication
4.division
4

cannot divisible

